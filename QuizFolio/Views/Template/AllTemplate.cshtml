<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">MyFormsApp</a>

            <form class="d-flex ms-auto me-3" role="search">
                <input class="form-control me-2" type="search" placeholder="Search Templates..." aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>

            <ul class="navbar-nav mb-2 mb-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">User</a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">

            <!-- Latest Templates Gallery -->
            <h3>Latest Templates</h3>
            <div class="row row-cols-1 row-cols-md-3 g-4">

                <!-- Card Item -->
                <div class="col">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/400x200" class="card-img-top" alt="Template Image">
                        <div class="card-body">
                            <h5 class="card-title">Template Title</h5>
                            <p class="card-text">Short description about this template.</p>
                            <a href="#" class="btn btn-primary">View Template</a>
                        </div>
                    </div>
                </div>
                <!-- Repeat Card Items Dynamically -->

            </div>

            <!-- Popular Templates Table -->
            <h3 class="mt-5">Top 5 Popular Templates</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Forms Filled</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Quiz for Interview</td>
                        <td>John Doe</td>
                        <td>120</td>
                        <td><a href="#" class="btn btn-sm btn-outline-primary">View</a></td>
                    </tr>
                </tbody>
            </table>

            <!-- Tag Cloud -->
            <h3 class="mt-5">Tags</h3>
            <div class="d-flex flex-wrap gap-2">
                <a href="#" class="btn btn-outline-secondary btn-sm">Education</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Survey</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Job</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Other</a>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>