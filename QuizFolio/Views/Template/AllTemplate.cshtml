@{
}
@using QuizFolio.Models;
@model IEnumerable<QuizFolio.Models.Template>;
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<body class="bg-light">

    <div class="container mt-4">
        <div class="row">
            <div class="col-10">
                <h3>Latest Templates</h3>
            </div>
            <div class="col-2">
                <a asp-controller="Template" asp-action="CreateTemplate" type="button" class="btn btn-sm btn-outline-success">
                    <i class="fa fa-plus"></i>
                    New Template
                </a>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4">


                @foreach(var Template in Model)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="~/images/account-bg.jpg" class="card-img-top" alt="Template Image">
                            <div class="card-body">
                                <h5 class="card-title">@Template.Title</h5>
                                <p class="card-text">@Template.Description</p>
                                <a asp-controller="Form" asp-action="ViewForm" asp-route-id="@Template.Id" class="btn btn-primary">View Template</a>
                            </div>
                        </div>
                    </div>
                }

            </div>

            <!-- Popular Templates Table -->
            <h3 class="mt-5">Top 5 Popular Templates</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Forms Filled</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var template in Model
                    .OrderByDescending(t => t.FormResponses != null ? t.FormResponses.Count : 0)
                    .Take(5))
                    {
                        <tr>
                            <td>@template.Title</td>
                            <td>@template.Creator?.UserName</td>
                            <td>@(template.FormResponses?.Count ?? 0)</td>
                            <td>
                                <a asp-controller="Form" asp-action="ViewForm" asp-route-id="@template.Id" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Tag Cloud -->
            <h3 class="mt-5">Tags</h3>
            <div class="d-flex flex-wrap gap-2">
                <a href="#" class="btn btn-outline-secondary btn-sm">Education</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Survey</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Job</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Other</a>
            </div>

        </div>
    </div>
</body>
