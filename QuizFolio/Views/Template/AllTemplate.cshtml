@*
*@
@{
}
@using QuizFolio.Models;
@model IEnumerable<QuizFolio.Models.Template>;


<body class="bg-light">

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <a asp-controller="Template" asp-action="CreateTemplate">Create New Template</a>
            <!-- Latest Templates Gallery -->
            <h3>Latest Templates</h3>
            <div class="row row-cols-1 row-cols-md-3 g-4">

                <!-- Card Item -->

                @foreach(var Template in Model)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="~/images/account-bg.jpg" class="card-img-top" alt="Template Image">
                            <div class="card-body">
                                <h5 class="card-title">@Template.Title</h5>
                                <p class="card-text">@Template.Description</p>
                                <a href="#" class="btn btn-primary">View Template</a>
                            </div>
                        </div>
                    </div>
                }

            </div>

            <!-- Popular Templates Table -->
            <h3 class="mt-5">Top 5 Popular Templates</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Forms Filled</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Quiz for Interview</td>
                        <td>John Doe</td>
                        <td>120</td>
                        <td><a href="#" class="btn btn-sm btn-outline-primary">View</a></td>
                    </tr>
                </tbody>
            </table>

            <!-- Tag Cloud -->
            <h3 class="mt-5">Tags</h3>
            <div class="d-flex flex-wrap gap-2">
                <a href="#" class="btn btn-outline-secondary btn-sm">Education</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Survey</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Job</a>
                <a href="#" class="btn btn-outline-secondary btn-sm">Other</a>
            </div>

        </div>
    </div>
</body>
